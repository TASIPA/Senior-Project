<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="30dp"
    android:textAlignment="textStart"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="12dp"
    app:cardElevation="30dp"
    app:cardMaxElevation="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="118dp"
            android:layout_height="109dp"
            android:layout_marginLeft="5dp"
            android:padding="10dp"
            app:srcCompat="@drawable/train" />

        <TextView
            android:id="@+id/showTrainNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#0094b7"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>




    <RelativeLayout
        android:layout_width="262dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/traindetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Train detail"
            android:textColor="#0094b7"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/flags" />

        <ImageView
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginTop="83dp"
            app:srcCompat="@drawable/endflag" />

        <TextView
            android:id="@+id/departuretime"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="60dp"
            android:text="Arrive Time"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/departstationname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="35dp"
            android:text="Departure Station"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/destarrivaltime"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="110dp"
            android:text="Arrive Time"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/destinationstationname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="85dp"
            android:text="Destination Station"
            android:textColor="#000"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>